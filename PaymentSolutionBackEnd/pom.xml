	<modelVersion>4.0.0</modelVersion>
	<groupId>cmportal</groupId>
	<artifactId>cmportal</artifactId>
	<version>1.0.1</version>
	<packaging>war</packaging>
	<name>cmportal</name>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<directory>resources</directory>
				<excludes>
					<exclude>**/*.pfx</exclude>
					<exclude>**/*.cer</exclude>
					<exclude>**/*.txt</exclude>
					<exclude>**/*.jks</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.5.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>3.0.0</version>
				<configuration>
					<warSourceDirectory>WebContent</warSourceDirectory>
					<packagingExcludes>WEB-INF/classes/certificate/*.*</packagingExcludes>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>primefaces</id>
			<name>primefaces</name>
			<url>http://repository.primefaces.org/</url>
		</repository>
